<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.github.drewhans555.pr0ca1.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <!-- contains all GUI elements -->
    <LinearLayout
        android:id="@+id/linearLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0px"
        tools:layout_editor_absoluteY="0px">

        <!-- contains all TextView elements -->
        <LinearLayout
            android:id="@+id/linearLayoutTextViews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewDEC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/selector"
                    android:onClick="onPressDec"
                    android:paddingBottom="3dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="3dp"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/DECText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textViewDEC"
                    android:background="@drawable/selector"
                    android:onClick="onPressDec"
                    android:paddingBottom="3dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="3dp"
                    android:text="@string/DEC"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:typeface="monospace" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewHEX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/selector"
                    android:onClick="onPressHex"
                    android:paddingBottom="3dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="3dp"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/HEXText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textViewHEX"
                    android:background="@drawable/selector"
                    android:onClick="onPressHex"
                    android:paddingBottom="3dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="3dp"
                    android:text="@string/HEX"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:typeface="monospace" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewOCT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/selector"
                    android:onClick="onPressOct"
                    android:paddingBottom="3dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="3dp"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/OCTText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textViewOCT"
                    android:background="@drawable/selector"
                    android:onClick="onPressOct"
                    android:paddingBottom="3dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="3dp"
                    android:text="@string/OCT"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:typeface="monospace" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewBIN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/selector"
                    android:onClick="onPressBin"
                    android:paddingBottom="3dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="3dp"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/BINText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textViewBIN"
                    android:background="@drawable/selector"
                    android:onClick="onPressBin"
                    android:paddingBottom="3dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="3dp"
                    android:text="@string/BIN"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:typeface="monospace" />

            </RelativeLayout>
        </LinearLayout>

        <!-- contains all Button elements -->
        <LinearLayout
            android:id="@+id/linearLayoutButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayoutButtonRow1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonAND"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_and"
                    android:onClick="onPressAnd"
                    android:text="@string/AND"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonOR"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_or"
                    android:onClick="onPressOr"
                    android:text="@string/OR"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonXOR"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_xor"
                    android:onClick="onPressXor"
                    android:text="@string/XOR"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonAC"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_ac"
                    android:onClick="onPressAc"
                    android:text="@string/allClear"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutButtonRow2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonNAND"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_nand"
                    android:onClick="onPressNand"
                    android:text="@string/NAND"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonNOR"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_nor"
                    android:onClick="onPressNor"
                    android:text="@string/NOR"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonXNOR"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_xnor"
                    android:onClick="onPressXnor"
                    android:text="@string/XNOR"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonDEL"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_del"
                    android:onClick="onPressDel"
                    android:text="@string/DEL"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutButtonRow3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonD"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_number"
                    android:onClick="onPressD"
                    android:text="@string/d"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonE"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_number"
                    android:onClick="onPressE"
                    android:text="@string/e"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonF"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_number"
                    android:onClick="onPressF"
                    android:text="@string/f"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonNOT"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_not"
                    android:onClick="onPressNot"
                    android:text="@string/NOT"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutButtonRow4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonA"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_number"
                    android:onClick="onPressA"
                    android:text="@string/a"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonB"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_number"
                    android:onClick="onPressB"
                    android:text="@string/b"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonC"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_number"
                    android:onClick="onPressC"
                    android:text="@string/c"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonMOD"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_mod"
                    android:onClick="onPressMod"
                    android:text="@string/mod"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutButtonRow5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button7"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_number"
                    android:onClick="onPress7"
                    android:text="@string/seven"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/button8"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_number"
                    android:onClick="onPress8"
                    android:text="@string/eight"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/button9"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_number"
                    android:onClick="onPress9"
                    android:text="@string/nine"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonDIVIDE"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_divide"
                    android:onClick="onPressDivide"
                    android:text="@string/div"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutButtonRow6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button4"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_number"
                    android:onClick="onPress4"
                    android:text="@string/four"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/button5"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_number"
                    android:onClick="onPress5"
                    android:text="@string/five"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/button6"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_number"
                    android:onClick="onPress6"
                    android:text="@string/six"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonMULTIPLY"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_multiply"
                    android:onClick="onPressMultiply"
                    android:text="@string/mul"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutButtonRow7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button1"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_number"
                    android:onClick="onPress1"
                    android:text="@string/one"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/button2"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_number"
                    android:onClick="onPress2"
                    android:text="@string/two"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/button3"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_number"
                    android:onClick="onPress3"
                    android:text="@string/three"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonSUBTRACT"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_subtract"
                    android:onClick="onPressSubtract"
                    android:text="@string/sub"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutButtonRow8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button0"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_number"
                    android:onClick="onPress0"
                    android:text="@string/zero"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonEQUAL"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:background="@drawable/button_equal"
                    android:onClick="onPressEqual"
                    android:text="@string/equal"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonADD"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_add"
                    android:onClick="onPressAdd"
                    android:text="@string/add"
                    android:textColor="@color/colorTextButton"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
